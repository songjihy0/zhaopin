page {
    background-color: rgb(239, 239, 244);
    box-sizing: border-box;
}

view {
    font-size: 13px;
    color: #353535;
}

.box {
    background: #fff;
    padding: 15px 30rpx;
    margin-bottom: 12px;
}

.box-last {
    margin-bottom: 0px;
    height: 40px;
}

.icon-right {
    position: absolute;
    right: 0px;
    top: 43%;
}

.item-flex {
    display: flex;
    flex-direction: row;
    padding: 10px 15px;
    box-sizing: border-box;
}

.item-icon {
    width: 30px;
    height: 30px;
    margin-right: 15px;
    background: #00cc66;
    border-radius: 50%;
    text-align: center;
    position: relative;
}

.item-icon::before {
    content: '';
    width: 1px;
    height: 25px;
    position: absolute;
    top: -28px;
    background: #00cc66;
}

.item-icon.item-1::before {
    width: 0px;
    height: 0px;
}

.item-icon .iconfont {
    font-size: 19px;
    line-height: 30px;
    text-align: center;
    color: #fff;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}

.item-con {
    flex-grow: 1;
}

.item-con view {
    color: #00cc66;
}

.item-flex._warn .item-icon {
    background: #e64340;
}

.item-flex._warn .item-con view {
    color: #e64340;
}

.icon-edit1 {
    display: inline-block;
    margin-right: 10px;
    line-height: 40px;
    position: relative
}

.comment {
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    text-align: center;
    line-height: 40px;
    background: #fff;
}

.fixed_ripple {
    position: absolute;
    width: 10px;
    height: 10px;
    background: #3091f2;
    border-radius: 50%;
    top: 14px;
    left: 2px;
    z-index: 10;
    animation: fixed_ripple 1s ease infinite;
}

.disable view {
    color: #c3cbd6 !important;
}
