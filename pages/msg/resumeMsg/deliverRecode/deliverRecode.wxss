page {
	background-color: rgb(239, 239, 244);
	box-sizing: border-box;
}
.box, .box-top {
	margin-top: 20px;
	background: #fff;
	box-sizing: border-box;	/*box-shadow: 0 2px 7px rgba(0, 0, 0, 0.15);*/
}
.box-top {
	margin-top: 0px;
}
.item {
	width: 100%;
	padding: 25rpx 25rpx 0 25rpx;
	box-sizing: border-box;
	background: #fff;
	border-bottom: 1rpx solid rgba(50, 40, 50, 0.1);
}
.logo {
	float: left;
	width: 175rpx;	/*background:rgba(0,0,0,0.1);*/
	display: flex;
	align-items: flex-start;
	justify-content: center;
	height: 100%;
}
.details {
	float: left;
	width: 525rpx;
	height: 100%;
	padding-bottom: 20rpx;
}
.job-title {
	font-weight: 700;
	font-size: 30rpx;
	float: left;
}
.deliver-date {
	float: right;
}
.job-salary {
	color: #ff9a00;
	font-weight: 600;
}
.company-name {
	color: #353535;
	margin-left: 15px;
}
.status {
}
.translucence-msg {
	color: #888888;
}
.work-place {
}
.internship, .degree, .company-type {
	margin-left: 15rpx;
}
.release-date {
	color: #b2b2b2;
}
.dateItem {
	border-left: 1rpx solid rgb(239, 239, 244);
	padding: 15px;
	position: relative;
	margin-top: 6px;
	margin-left: 2px;
}
.dateItem:before {
	content: "";
	width: 18px;
	height: 18px;
	border-radius: 50%;
	position: absolute;
	left: 11px;
	top: 16px;
	background: #2196f3;
}
.box-status {
	padding: 10px 15px;
}
.item-flex {
	display: flex;
	flex-direction: row;
	padding: 10px 15px;
	box-sizing: border-box;
}
.item-icon {
	width: 30px;
	height: 30px;
	margin-right: 15px;
	background: #00cc66;
	border-radius: 50%;
	text-align: center;
	position: relative;
}
.item-icon::before {
	content: '';
	width: 1px;
	height: 29px;
	position: absolute;
	top: -32px;
	background: #00cc66;
}
.item-icon.item-1::before {
	width: 0px;
	height: 0px;
}
.item-icon .iconfont {
	font-size: 19px;
	line-height: 30px;
	text-align: center;
	color: #fff;
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
}
.item-con {
	flex-grow: 1;
}
.item-con view {
	color: #00cc66;
}