page {
    background-color: rgb(239, 239, 244);
    box-sizing: border-box;
}

.box,
.box-top {
    margin-top: 20px;
    background: #fff;
    box-sizing: border-box;
}

.img {
    width: 60px;
    height: 60px;
    vertical-align: middle;
    margin-right: 10px;
}

.box-top .icon-right {
    line-height: 60px;
}

.iconfont {
    color: #353535;
    vertical-align: baseline;
    margin-right: 7px;
}

.box .item {
    height: 41px;
    box-sizing: border-box;
    padding: 0px 30rpx;
}

.box .item text {
    line-height: 40px
;
}

.box .item .iconfont {
    line-height: 40px;
}

.icon-right {
    float: right;
    line-height: 40px;
    color: rgb(72, 194, 61);
    vertical-align: middle;
    font-size: 12px;
}
