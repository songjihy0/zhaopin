page {
    min-height: 100%;
    background-color: rgb(239, 239, 244);
    /*padding-top: 48px;*/
    box-sizing: border-box;
}

view {
    font-size: 15px;
}

icon {
    margin-right: 4px;
    vertical-align: middle;
}

.search-hot view view,
.search-hot view text,
.search-history view view,
.search-history view text {
    vertical-align: middle;
}

.searchBar {
    width: 100%;
    /*	top:0;*/
    height: 48px;
}

.search {
    background: rgb(239, 239, 244);
    padding: 0 30rpx;
    border-radius: 30px;
    flex-grow: 1;
    display: flex;
}

.search-input {
    display: inline-block;
    margin-left: 10rpx;
    color: #353535;
    min-width: 250rpx;
    padding: 5px 0;
    font-size: 15px;
    flex-grow: 1;
}

.icon-search {
    color: #888888;
    line-height: 75rpx;
}

.work-place {
    padding-right: 32rpx;
}

.work-place text {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 60px;
    display: inline-block;
}

.work-place .arrows-down {
    position: absolute;
    top: 10px;
    right: 15rpx;
}

.work-place text,
.handleItem text {
    vertical-align: baseline;
    margin-right: 8rpx;
    color: #353535;
}

.canclebox {
    padding-left: 12rpx;
}

.cancle {
    padding-left: 15rpx;
    padding-right: 15rpx;
    line-height: 2;
    font-size: 15px;
    color: #353535;
}

.search-history,
.search-hot {
    margin-top: 20rpx;
}

.history-list,
.hot-list {
    font-size: 13px;
    margin-top: 20rpx;
    margin-left: -10px;
}

.history-item,
.hot-item {
    display: inline-block;
    padding-left: 15rpx;
    padding-right: 15rpx;
    line-height: 2.2;
    font-size: 13px;
    color: #353535;
    margin-bottom: 7px;
    margin-left: 10px;
}

.handle {
    color: #09bb07;
    font-size: 13px;
    float: right;
}

.searchComplement {
    background: #ffffff;
    box-sizing: border-box;
}

.complement-item {
    box-sizing: border-box;
    padding: 0 34rpx;
}

._line {
    padding: 26rpx 0;
    /*width:100%;*/
    border-bottom: 1rpx solid rgb(239, 239, 244);
}

.complement-item icon {
    margin-right: 40rpx;
}

.complement-item text {
    vertical-align: baseline;
}

.handleBar {
    background: #fff;
    width: 100%;
    border-top: 1rpx solid rgb(239, 239, 244);
    border-bottom: 1rpx solid rgb(239, 239, 244);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 0 80rpx;
    height: 38px;
    z-index: 10;
}

.handleItem {
    font-size: 14px;
    line-height: 38px;
}

.handleArea {
    position: fixed;
    margin-top: 38px;
    overflow: hidden;
    z-index: 10;
    width: 100%;
}

.itemArea {
    /*height:300px;*/
    background: #fff;
    /*transform:translateY(-300px);*/
    top: -400px;
    position: absolute;
    width: 100%;
}

.itemArea-1 {
    height: 265px;
}

.itemArea .leftArea {
    height: 100%;
    float: left;
    width: 30%;
    background: rgb(239, 239, 244);
    display: flex;
    flex-direction: column;
    align-content: center;
    justify-content: center;
}

.itemArea .rightArea {
    height: 100%;
    float: right;
    width: 70%;
    padding: 0 100rpx;
    box-sizing: border-box;
}

.cidx-text {
    font-size: 14px;
    text-align: center;
    display: block;
    line-height: 40px;
    height: 40px;
}

.changeCity {
    height: 35px;
    line-height: 35px;
    color: #888888;
    box-sizing: border-box;
    text-align: center;
    background: #ffffff;
}

.icon-change {
    vertical-align: baseline;
    margin-right: 10px;
}

.changeCity text {
    color: #353535;
    vertical-align: baseline;
}

.itemArea-2,
.itemArea-3 {
    padding: 7px 30rpx 12px 30rpx;
    box-sizing: border-box;
    overflow-y: auto;
}

.itemArea-2 text,
.itemArea-3 text {
    font-size: 13px;
    width: 100rpx;
}

.itemArea-2 slider {
    margin: 5px 40rpx;
    width: 490rpx;
    display: inline-block;
}

.itemArea-2 .wx-slider-handle {
    width: 24px;
    height: 24px;
}

.itemArea-2 .title,
.itemArea-3 .title {
    color: #000;
    font-size: 15px;
}

.itemArea-item {}

.itemArea .btn-view {
    margin-top: 7px;
    margin-left: -10px;
}

.lxCheckboxGroup view {
    display: inline-block;
    margin-left: 10px;
    transition: all 0.3s ease;
    -webkit-transition: all 0.3s ease;
}

.itemArea-2 .lxCheckboxGroup view {
    margin-bottom: 10px;
    margin-top: 10px;
}


