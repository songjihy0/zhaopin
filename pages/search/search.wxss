.circle {
    background: #F8F8F8;
    border-radius: 4px;
    padding: 4px 10rpx;
    box-sizing: border-box;
    border: 1px solid rgba(0, 0, 0, 0.2);
    margin-bottom: 22rpx;
    font-size: 24rpx;
}

.success_circle {
    background: rgb(72, 194, 61);
    box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.5);
    border-radius: 4px;
    padding: 4px 10rpx;
    box-sizing: border-box;
    border: 1px solid transparent;
    color: #fff;
    margin-bottom: 22rpx;
    font-size: 24rpx;
}

.list {
    width: 100%;
}

.item {
    width: 100%;
    padding: 25rpx 25rpx 0 25rpx;
    box-sizing: border-box;
}

.logo {
    float: left;
    width: 175rpx;
    /*background:rgba(0,0,0,0.1);*/
    display: flex;
    align-items: flex-start;
    justify-content: center;
    height: 100%;
}

.details {
    float: left;
    width: 525rpx;
    height: 100%;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid rgba(50, 40, 50, 0.1);
}

.job-title {
    font-weight: 700;
    font-size: 30rpx;
    float: left;
}

.job-salary {
    color: #ff9a00;
    font-weight: 700;
    float: right;
}

.company-name {
    color: #353535;
    font-size: 30rpx;
}

.translucence-msg {
    color: #888888;
}

.translucence-msg text {
    font-size: 28rpx;
}

.work-place {}

.degree,
.scale, .company-type,
.company-financing-stage {
    margin-left: 15rpx;
}

.release-date {
    color: #b2b2b2;
}

.jobList {
    background: #fff;
    margin-top: 38px;
}
